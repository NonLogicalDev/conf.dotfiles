" vim: ft=vim
colorscheme dmod

set vicmd=nvim
set nofollowlinks
set viewcolumns=-{name},6{size},15{mtime}

screen
filextype *.pdf, *.jpg 
      \ {View in default OSX app} 
      \ open %c

map o :!open %f<CR>
map O :!qlmanage -p %f > /dev/null 2>/dev/null &<CR>

command link :execute '!ln -s %d/%f %D'

alias gonote='cd ~/Documents/Notes'

alias scurl='curl --cert $CU_CERT'

# Setting up aliases

alias fuck='sudo $(fc -ln -1)'
alias vim='nvim'
alias tmsave='tmux show-buffer | pbcopy'
alias mux='tmuxinator'
alias rmr='rmf'
alias cdb='cd +1'


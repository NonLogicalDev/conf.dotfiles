{
  "root": "~/",

  "dir_mode": "root",
  "dot_mode": "top_level",
  "copy_mode": "rlink",

  "dirconf": {
    "irssi": {
      "copy_mode": "copy",
      "dir_mode": "id"
    },
    "taskwarrior": {
      "dir_mode": "id"
    },
    "vifm": {
      "dir_mode": "id"
    },
    "bin": {
      "copy_mode": "copy",
      "dir_mode": "id",
      "dot_mode": "no_dot"
    }
  },

  "#": "Folders listed in here will not be acted upon",
  "disabled" : [ "@hooks" ],

  "#": "Files listed in here will not be symlinked",
  "ignore" : [".DS_Store", "*.bak", ".gitkeep", ".idea/*", "__pycache__/*"],

  "#": "Scripts (not implemented yet):",
  "prelink"  : "@hooks/pre.sh",
  "postlink" : "@hooks/post.sh"
}

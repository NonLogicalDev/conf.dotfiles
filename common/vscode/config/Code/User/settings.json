// Place your settings in this file to overwrite the default settings
{
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/.tmp": true,
        "vendor": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "go-build/.go": true,
        "**/*.test": true,
        "Godeps/_workspace": true,
        "**/coverage.html": true,
        "**/_build": true
    },

    "window.zoomLevel": 0,

    "editor.fontFamily": "'Fixedsys Excelsior', Menlo, Monaco, 'Courier New', monospace",
    "editor.lineHeight": 16,
    "editor.fontSize": 16,
    "editor.suggestFontSize": 16,
    "editor.fontLigatures": false,
    "editor.formatOnType": true,
    "editor.scrollBeyondLastLine": false,
    "editor.cursorSmoothCaretAnimation": true,

    "terminal.integrated.fontSize": 16,

    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.fontAliasing": "auto",
    "workbench.list.multiSelectModifier": "alt",
    "workbench.list.keyboardNavigation": "filter",

    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Atom One Dark",

    "workbench.colorCustomizations": {
        // "[Atom One Dark]": {
        //     "activityBar.background": "#36354F",

        //     "editor.background": "#242437",
        //     "editor.selectionBackground": "#35324D",

        //     "list.activeSelectionBackground": "#1C1B2C",
        //     "list.focusBackground": "#35324D",
        //     "list.inactiveSelectionBackground": "#35324D",

        //     "editorGutter.background": "#1E1E2C",
        //     "editorLineNumber.activeForeground": "#C2C1C1",
        //     "editorLineNumber.foreground": "#474569",
        //     "editor.lineHighlightBackground": "#1C1B2C",

        //     "editorWidget.background": "#1A1A26",

        //     "input.background": "#1C1B2C",

        //     "sideBar.background": "#2C2C3F",
        //     "sideBarSectionHeader.background": "#1C1B2C",

        //     "statusBar.background": "#28283A",
        //     "statusBarItem.activeBackground": "#3D3C58",
        //     "statusBarItem.hoverBackground": "#1A1A26",

        //     "tab.activeBackground": "#3D3C58",
        //     "tab.hoverBackground": "#1A1A26",
        //     "tab.inactiveBackground": "#28283A",
        //     "editorGroupHeader.tabsBackground": "#1E1E2C",

        //     "titleBar.activeBackground": "#1E1E2C"
        // }
    },

    "oneDarkPro.italic": false,

    //------------------------------------------------------------------------------
    // Vim:
    //------------------------------------------------------------------------------

    "vim.easymotion": true,
    "vim.foldfix": true,
    "vim.leader": " ",
    "vim.visualstar": true,
    "vim.enableNeovim": true,
    "vim.highlightedyank.enable": true,

    "vim.insertModeKeyBindings": [
        { "before": ["up"], "after": ["<C-o>", "g", "k"] },
        { "before": ["down"], "after": ["<C-o>", "g", "j"] },
    ],
    "vim.normalModeKeyBindings": [
        { "before": ["k"], "after": ["g", "k"] },
        { "before": ["j"], "after": ["g", "j"] },
    ],

    "gitlens.views.repositories.files.layout": "tree",

    "diffEditor.ignoreTrimWhitespace": true,
    "diffEditor.renderSideBySide": true,

    //------------------------------------------------------------------------------
    // Languages:
    //------------------------------------------------------------------------------

    "typescript.updateImportsOnFileMove.enabled": "always",

    "javascript.updateImportsOnFileMove.enabled": "always",

    "python.languageServer": "Microsoft",
    "python.pythonPath": "/usr/local/bin/python3",
    "python.jediEnabled": false,

    "go.gopath": "${env:HOME}/go",
    "go.toolsGopath": "${env:HOME}/go",
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.useCodeSnippetsOnFunctionSuggest": true,
    "go.trace.server": "verbose",

    "platformio-ide.disablePIOHomeStartup": true
}

{
  "defaults": {
    "root": "~/",

    "add_dot": false,

    "link_mode": "recursive_link",
    "link_whole_dir": false,

    "recursive_modifiers": {
      "link": ".xlink",
      "touch": ".xtouch",
      "copy": ".xcopy"
    },

    "ignore" : [
      "*/.DS_Store",
      "*/*.bak",
      "*/.gitkeep",
      "*/.idea/*",
      "*/__pycache__/*"
    ]
  },
  "topics": {
    "bin": {
      "link_mode": "recursive_link",
      "link_whole_dir": true
    }
  },
  "disabled": []
}

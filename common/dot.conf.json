{
  "defaults": {
    "root": "~/",

    "add_dot": true,
    "use_contents": true,

    "link_mode": "recursive_link",
    "recursive_modifiers": {
      "link": ".xlink",
      "touch": ".xtouch",
      "copy": ".xcopy"
    },

    "ignore" : [
      "*/.DS_Store",
      "*/*.bak",
      "*/.gitkeep",
      "*/.idea/*",
      "*/__pycache__/*"
    ]
  },
  "topics": {
    "tmux-bin": {
      "add_dot": false
    },
    "bin": {
      "add_dot": false,
      "use_contents": false,
      "link_mode": "recursive_link"
    },
    "irssi": {
      "link_mode": "copy"
    },
    "taskwarrior": {
      "use_contents": false
    }
  },
  "disabled": []
}
